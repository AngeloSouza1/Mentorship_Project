<div class="container mt-4">
  <h1 class="text-center">Relatorio Autor</h1>
  <%= form_tag( relatorio_autor_path, method: "get", class: "text-center") do %>
    <div class="form-group row justify-content-center">
      <%= label_tag :search_author, "Título do Livro:", class: "col-md-2 col-form-label" %>
      <div class="col-md-6">
        <div class="input-group">
          <%= text_field_tag :search_author, params[:search_author], class: "form-control form-control-sm", placeholder: "Digite o nome do Título" %>
          <div class="input-group-append">
            <%= submit_tag "Filtrar", class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="text-center mt-3">
    <%= link_to "Voltar para Autores", authors_path, class: "btn btn-secondary btn-sm" %>
  </div>
  
  <% if params[:search_author].present? %>
    <% if @authors.present? %>
      <table class="table table-sm mt-4">
        <thead>
          <tr>
            <th scope="col">ID Author</th>
            <th scope="col">Author</th>
            <th scope="col">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @authors.each_with_index do |author, index| %>
            <tr class="<%= index.even? ? 'table-light' : 'table-white' %>">
              <td><%= author.id %></td>
              <td><%= author.name %></td> 
              <td>
              <%= link_to 'Gerar Relatório', gerar_pdf_autor_path(author, search_author: params[:search_author]), class: 'btn btn-primary btn-sm' %>
            </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
        <br>    
        <p class="text-center">Nenhum autor encontrado.</p>
    <% end %>
  <% end %>
</div>
