<%= form_with(model: author) do |form| %>
  <% if author.errors.any? %>
    <div style="color: red">
    

      <ul>
        <% author.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    
  <div class="container text-center mt-3"> 
  <div class="d-inline-block mx-auto"> 
    <div>
      <br>
      <%= form.label :name, "Nome:", style: "display: block" %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :cpf, "CPF:", style: "display: block" %>
      <%= form.text_field :cpf %>
    </div>
    <p>
    <div>
      <%= form.label :sup_id, "Fornecedor:", style: "display: block" %>
      <%= form.select :sup_id, Supplier.all.map { |s| [s.name, s.id] }, { include_blank: "Selecione um fornecedor" },  class: "form-control text-center" %>
    </div>
  </div>
</div>

<div class="mt-3 d-flex justify-content-center">
<%= form.submit "Salvar", class: "btn btn-success btn-sm", style: "width: 60px;" %>
</div>
<% end %>
