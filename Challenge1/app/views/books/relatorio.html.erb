<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" style="padding-top: 5px; padding-bottom: 5px;">
  <div class="container">
    <span class="navbar-brand" style="font-size: 2em; font-weight: bold; margin-right: 20px;">Relatório Livros com Montagem</span>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</nav>

<div class="container" style="margin-top: 90px;">
  <%= form_tag(relatorio_livro_path, method: "get", class: "text-center") do %>
    <div class="form-group row justify-content-center">
      <%= label_tag :search_book, "Nome do Livro:", class: "col-md-2 col-form-label" %>
      <div class="col-md-6">
        <div class="input-group">
          <%= text_field_tag :search_book, params[:search_book], class: "form-control form-control-sm", placeholder: "Digite o nome do Livro" %>
          <div class="input-group-append">
            <%= submit_tag "Filtrar", class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="text-center mt-3">
    <%= link_to "Voltar para Livros", books_path, class: "btn btn-secondary btn-sm" %>
  </div>
  
  <% if params[:search_book].present? %>
    <% if @books.present? %>
     <table class="table table-sm table-auto mt-4">
        <thead>
          <tr>
            <th scope="col">ID </th>
            <th scope="col">Título</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each_with_index do |book, index| %>
            <tr class="<%= index.even? ? 'table-light' : 'table-white' %>">
              <td><%= book.id %></td>
              <td><%= book.title %></td> 
              <td>
              <%= link_to 'Gerar Relatório', gerar_livro_book_path(book.id), class: 'btn btn-primary btn-sm' %>
              </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
        <br>    
        <p class="text-center">Nenhum Livro encontrado.</p>
    <% end %>
  <% end %>
</div>





