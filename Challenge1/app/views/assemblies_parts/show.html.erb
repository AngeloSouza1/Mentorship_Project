<div class="text-center">
  <h1 class="mb-4">Detalhes</h1>
  <p class="text-success"><%= notice %></p>

  <%= render @assemblies_part %>

  <div class="mt-3 d-flex justify-content-center align-items-center">
  <%= link_to "Editar esta peça de montagem", edit_assemblies_part_path(@assemblies_part), class: "btn btn-info btn-sm d-inline-block" %> 
  <%= link_to "Voltar para peças de montagem", assemblies_parts_path, class: "btn btn-secondary btn-sm d-inline-block ml-2", style: "margin-left: 10px;" %>
  <%= button_to "Excluir esta peça de montagem", @assemblies_part, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm d-inline-block ml-2", style: "margin-left: 10px;" %>
</div>


</div>
