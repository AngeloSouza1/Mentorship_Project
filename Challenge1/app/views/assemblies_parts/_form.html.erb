<%= form_with(model: assemblies_part) do |form| %>
  <% if assemblies_part.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(assemblies_part.errors.count, "error") %> impediram que esta peça de montagem fosse salva:</h2>

      <ul>
        <% assemblies_part.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-md-4 mx-auto text-center">
    <br>
    <br>
    <br>
    <%= form.label :assembly_id, "Montagem", class: "d-block" %>
    <%= form.collection_select :assembly_id, Assembly.all, :id, :name, { prompt: "Selecione uma montagem" }, class: "form-control form-control-sm text-center" %>
    </div>

  <div class="form-group col-md-4 mx-auto text-center">
    <%= form.label :part_id, "Peça", class: "d-block" %>
    <%= form.collection_select :part_id, Part.all, :id, :nome, { prompt: "Selecione uma peça" }, class: "form-control form-control-sm text-center" %>
  </div>

  <div class="form-group col-md-4 mx-auto text-center">
    <%= form.label :book_id, "Livro", class: "d-block" %>
    <%= form.collection_select :book_id, Book.all, :id, :title, { prompt: "Selecione um livro" }, class: "form-control form-control-sm text-center" %>
    <br>
  </div>

  <div class="form-group col-md-4 mx-auto text-center">
    <%= form.submit "Salvar", class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
