<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" style="padding-top: 5px; padding-bottom: 5px;">
  <div class="container">
    <span class="navbar-brand" style="font-size: 2em; font-weight: bold; margin-right: 20px;">Filtrar Fornecedores</span>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</nav>


<div class="container" style="margin-top: 90px;">
  <%= form_tag(filtrar_fornecedores_path, method: "get", class: "text-center") do %>
    <div class="form-group row justify-content-center">
      <%= label_tag :search_name, "Nome do Fornecedor:", class: "col-md-2 col-form-label" %>
      <div class="col-md-6">
        <div class="input-group">
          <%= text_field_tag :search_name, params[:search_name], class: "form-control form-control-sm", placeholder: "Digite o nome do fornecedor" %>
          <div class="input-group-append">
            <%= submit_tag "Filtrar", class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="text-center mt-3">
    <%= link_to "Voltar para Fornecedores", suppliers_path, class: "btn btn-secondary btn-sm" %>
  </div>
  <% if params[:search_name].present? %>
    <% if @suppliers.present? %>
      <table class="table table-sm mt-4">
        <thead>
          <tr>
            <th scope="col">ID</th>  
            <th scope="col">Nome</th>
            <th scope="col">CNPJ</th>
          </tr>
        </thead>
        <tbody>
          <% @suppliers.each_with_index do |supplier, index| %>
            <tr class="<%= index.even? ? 'table-light' : 'table-white' %>">
              <td><%= supplier.id %></td> 
              <td><%= supplier.name %></td>
              <td><%= supplier.cnpj %></td> 
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>
      <p class="text-center">Nenhum fornecedor encontrado.</p>
    <% end %>
  <% end %>
</div>
