<div class="container mt-4">
  <h1 class="text-center">Filtrar Fornecedores por Autor</h1>
  <%= form_tag(filtrar_fornec_autor_path, method: "get", class: "text-center") do %>
    <div class="form-group row justify-content-center">
      <%= label_tag :search_name, "Nome do Autor:", class: "col-md-2 col-form-label" %>
      <div class="col-md-6">
        <div class="input-group">
          <%= text_field_tag :search_name, params[:search_name], class: "form-control form-control-sm", placeholder: "Digite o nome do fornecedor" %>
          <div class="input-group-append">
            <%= submit_tag "Filtrar", class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="text-center mt-3">
    <%= link_to "Voltar para Fornecedores", filtrar_fornec_autor_path, class: "btn btn-secondary btn-sm" %>
  </div>
  <% if params[:search_name].present? %>
    <% if @suppliers.present? %>
      <table class="table table-sm mt-4">
        <thead>
          <tr>
            <th scope="col">ID</th>  
            <th scope="col">FornecedorID</th>  
        
          </tr>
        </thead>
        <tbody>
          <% @suppliers.each_with_index do |supplier, index| %>
            <tr class="<%= index.even? ? 'table-light' : 'table-white' %>">
              <td><%= supplier.id %></td> 
              <td><%= supplier.name %></td> 
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center">Nenhum fornecedor encontrado.</p>
    <% end %>
  <% end %>
</div>
