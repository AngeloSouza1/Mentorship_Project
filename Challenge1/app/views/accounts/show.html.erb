<div class="d-flex flex-column justify-content-center align-items-center vh-10 mt-50">
  <p class="alert"><%= notice %></p>
  <h1>Detalhes da Conta</h1>
  <%= render @account %>
  
  <div class="d-flex mt-3">
    <%= link_to "Editar", edit_account_path(@account), class: "btn btn-sm btn-primary mx-2" %>
    <%= link_to "Voltar", accounts_path, class: "btn btn-sm btn-secondary mx-2" %>
    <%= button_to "Excluir", @account, method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-sm btn-danger mx-2" %>
  </div>
</div>
