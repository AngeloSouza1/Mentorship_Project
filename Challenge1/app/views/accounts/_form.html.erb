<%= form_with(model: account) do |form| %>
  <% if account.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% account.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= form.label :supplier_id, "Fornecedor", class: "control-label" %>
    <%= form.select :supplier_id, Supplier.all.map { |s| [s.name, s.id] }, { include_blank: "Selecione um fornecedor" },  class: "form-control text-center" %>
  </div>
  <p>
  <div class="form-group">
   
    <%= form.label :account_number, "NÃºmero da Conta:" %>
