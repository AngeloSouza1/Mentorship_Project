<%= form_with(model: assembly) do |form| %>
  <% if assembly.errors.any? %>
    <div style="color: red">
    

      <ul>
        <% assembly.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    
  <div>
    <%= form.label :name,"Nome:", style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="mt-3">
    <%= form.submit "Salvar", class: "btn btn-success btn-sm", style: "width: 60px;" %>
  </div>
<% end %>