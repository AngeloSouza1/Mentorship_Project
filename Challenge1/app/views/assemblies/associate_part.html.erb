<h1>Associate Parts with Assembly</h1>

<%= form_tag(associate_part_assembly_path(@assembly), method: :post) do %>
  <div class="field">
    <%= label_tag 'Part:' %>
    <%= select_tag 'part_id', options_from_collection_for_select(@parts, 'id', 'part_number') %>
  </div>

  <%= submit_tag 'Associate Part' %>
<% end %>

<%= link_to 'Back', @assembly %>
