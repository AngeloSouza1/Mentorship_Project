<div class="d-flex flex-column justify-content-center align-items-center vh-10 mt-50">
  <p class="alert"><%= notice %></p>
  <h1>Detalhes da Montagem</h1>

  <%= render @assembly %>

  <div class="d-flex mt-3">
    <%= link_to "Editar", edit_assembly_path(@assembly), class: "btn btn-sm btn-primary mx-2" %>
    <%= link_to "Voltar", assemblies_path, class: "btn btn-sm btn-secondary mx-2" %>
    <%= button_to "Excluir", @assembly, method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-sm btn-danger mx-2" %>
  </div>
</div>
